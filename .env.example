# CodeBoss Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================

# Server-side (private) - used by Server Actions
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Client-side (public) - used by browser
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# OpenAI Configuration
# =============================================================================

OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Langsmith Configuration (Epic 1: Tracing)
# =============================================================================

LANGSMITH_API_KEY=your-langsmith-api-key

# =============================================================================
# Eval Infrastructure (Epic 2)
# =============================================================================

# Claude judge model (decorrelated from GPT-4o coaching)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Full DB access for CLI evaluation scripts
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# Production Monitoring (Epic 4)
# =============================================================================

# Percentage of completed sessions to sample for background evaluation (0.0 to 1.0)
# Set to 0 to disable sampling (default)
EVAL_SAMPLE_RATE=0

# Webhook URL for drift alerts (optional)
# When configured, a POST request is sent to this URL when drift exceeds threshold
# EVAL_ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
